SELECT pc.class_ID, pc.class_name from DNDClass pc
	INNER JOIN DNDClass_Spells ps on ps.class_ID = pc.class_ID
	INNER JOIN Spells s on ps.spell_ID = s.spell_ID;

 Select * from dndclass;
